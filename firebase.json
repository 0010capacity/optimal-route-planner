{
  "functions": {
    "source": "functions",
    "runtime": "nodejs18",
    "memory": "512MB",
    "cpu": 1,
    "region": "asia-northeast3"
  },
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "region": "asia-northeast3"
  }
}
